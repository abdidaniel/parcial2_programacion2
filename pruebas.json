{
  "info": {
    "name": "TaskFlow - pruebas básicas",
    "_postman_id": "taskflow-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "slug", "value": "" }
  ],
  "item": [
    {
      "name": "01 - Signup (registrar usuario)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "testuser", "type": "text" },
            { "key": "email", "value": "testuser@example.com", "type": "text" },
            { "key": "password", "value": "secret123", "type": "text" }
          ]
        },
        "url": { "raw": "{{base_url}}/signup", "host": ["{{base_url}}"], "path": ["signup"] }
      }
    },
    {
      "name": "02 - Login",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "email", "value": "testuser@example.com", "type": "text" },
            { "key": "password", "value": "secret123", "type": "text" },
            { "key": "remember_me", "value": "y", "type": "text" }
          ]
        },
        "url": { "raw": "{{base_url}}/login", "host": ["{{base_url}}"], "path": ["login"] }
      }
    },
    {
      "name": "03 - Crear tarea (login requerido)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "title", "value": "Comprar leche", "type": "text" },
            { "key": "description", "value": "Ir al supermercado y comprar leche", "type": "text" },
            { "key": "due_date", "value": "2025-10-25 12:00", "type": "text" },
            { "key": "status", "value": "pending", "type": "text" }
          ]
        },
        "url": { "raw": "{{base_url}}/admin/task/", "host": ["{{base_url}}"], "path": ["admin","task",""] }
      }
    },
    {
      "name": "04 - Logout",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/logout", "host": ["{{base_url}}"], "path": ["logout"] }
      }
    },
    {
      "name": "05 - Editar tarea (update)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "title", "value": "Comprar leche y pan", "type": "text" },
            { "key": "description", "value": "Además llevar pan integral", "type": "text" },
            { "key": "due_date", "value": "2025-10-25 18:00", "type": "text" },
            { "key": "status", "value": "in_progress", "type": "text" }
          ]
        },
        "url": { "raw": "{{base_url}}/admin/task/{{slug}}/edit", "host": ["{{base_url}}"], "path": ["admin","task","{{slug}}","edit"] }
      }
    }
  ]
}